
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 420,
    "data": {
        "url": "https://raw.githubusercontent.com/chinsn2003/FIT3179_A2/refs/heads/main/data/deforestation-by-agriculture.csv"
    },
    "transform": [
    {"calculate": "toNumber(datum['Forest loss (ha)'])", "as": "loss"},
    {"joinaggregate": [{"op": "sum", "field": "loss", "as": "grand"}]},
    {"calculate": "datum.loss / datum.grand", "as": "share"},
    {"window": [{"op": "rank", "as": "rk"}], "sort": [{"field": "loss", "order": "descending"}]}
  ],
    "layer": [
        {
            "mark": {
                "type": "arc",
                "innerRadius": 100,
                "outerRadius": 350,
                "stroke": "white",
                "strokeWidth": 1,
                "tooltip": true
            },
            "encoding": {
                "theta": {
                    "field": "Entity",
                    "type": "nominal"
                },
                "radius": {
                    "field": "loss",
                    "type": "quantitative",
                    "scale": {"type": "linear", "rangeMin": 150, "rangeMax": 260},
                    "stack": false
                },
                "color": {
                    "field": "Entity",
                    "type": "nominal",
                    "title": "State",
                    "scale": {
                        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf"]
                    },
                    "legend": null
                },
                "tooltip": [
                    {"field": "Entity", "type": "nominal", "title": "State"},
                    {"field": "loss", "type": "quantitative", "title": "Production", "format": ","},
                    {"field": "share", "type": "quantitative", "title": "Share", "format": ".1%"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "fontSize": 10
            },
            "encoding": {
                "theta": {"field": "Entity", "type": "nominal"},
                "radius": {"value": 140},
                "text": {"field": "Entity", "type": "nominal"}
            }
        }
    ],
    "config": {
        "view": {"stroke": null},
        "axis": {"grid": false, "labels": false, "ticks": false}
    }
}