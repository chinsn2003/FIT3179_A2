{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Annual Tree Cover Loss per Forest Area (%)", "fontSize": 25},
  "width": "container",
  "height": 450,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "YearSel",
      "value": 2010,
      "bind": { "input": "range", "min": 2010, "max": 2020, "step": 1, "name": "Year: ","element": "#map-year-controls" }
    }
  ],

  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#eef6fb", "stroke": null }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#cccccc", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        { "calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note" }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": { "field": "note", "type": "nominal", "title": null }
      }
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/chinsn2003/FIT3179_A2/refs/heads/main/data/combined.csv"},
      "transform": [
        { "calculate": "toNumber(datum['Year'])", "as": "yearNum" },
        { "filter": "datum.yearNum == YearSel" },

        { "calculate": "toNumber(datum['Forest Area'])", "as": "forest_ha" },
        { "calculate": "toNumber(datum['Tree cover loss driven by all causes'])", "as": "loss_ha" },

        { "calculate": "datum.forest_ha > 0 ? 100 * datum.loss_ha / datum.forest_ha : null",
          "as": "pct_loss_forest" },

        {
          "lookup": "Country Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ISO_A3"
          },
          "as": "geo",
          "default": null
        },
        { "filter": "datum.geo != null" }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "pct_loss_forest",
          "type": "quantitative",
          "legend": {
            "title": "Loss per forest area (%)",
            "format": ".0f",
            "direction": "horizontal",
            "orient": "bottom",
            "titleAnchor": "middle"          },
          "scale": {
            "type": "threshold",
            "domain": [0.5, 1.5, 3, 6],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          }
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {"field": "yearNum", "type": "quantitative", "title": "Year"},
          {"field": "loss_ha", "type": "quantitative", "title": "Loss (ha)", "format": ",.0f"},
          {"field": "forest_ha", "type": "quantitative", "title": "Forest area (ha)", "format": ",.0f"},
          {"field": "pct_loss_forest", "type": "quantitative", "title": "Loss / forest (%)", "format": ".3f"}
        ]
      }
    },

    {
      "data": {"url": "https://raw.githubusercontent.com/chinsn2003/FIT3179_A2/refs/heads/main/data/combined.csv"},
      "transform": [
        { "calculate": "toNumber(datum['Year'])", "as": "yearNum" },
        { "filter": "datum.yearNum == YearSel" },

        { "calculate": "toNumber(datum['Forest Area'])", "as": "forest_ha" },
        { "calculate": "toNumber(datum['Tree cover loss driven by all causes'])", "as": "loss_ha" },
        { "calculate": "datum.forest_ha > 0 ? 100 * datum.loss_ha / datum.forest_ha : null", "as": "pct_loss_forest" },

        { "filter": "isValid(datum.pct_loss_forest)" },

        { "window": [{"op": "rank", "as": "rk"}], "sort": [{"field": "pct_loss_forest", "order": "descending"}]},
        { "filter": "datum.rk <= 3" }
      ],
      "layer": [
        {
          "mark": {"type": "text", "dy": -8, "fontSize": 11 },
          "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "text": {"field": "Country Name"},
            "color": {"value": "#111"}
          }
        }
      ]
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#bbb", "strokeWidth": 0.2}
    }
  ]
}
