{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Per-country CO₂ from deforestation embodied in trade (2013) for a selected product.",
  "width": 500,
  "height": 560,
  "data": {
    "url": "https://raw.githubusercontent.com/chinsn2003/FIT3179_A2/refs/heads/main/data/deforestation-co2-trade-by-product.csv",
    "format": {"type": "csv"}
  },

  "params": [
    {
      "name": "pProd",
      "value": "Cattle Meat",
      "bind": {
        "input": "select",
        "name": "Product: ",
        "options": [
        "Cattle Meat",
        "Oilseed Products",
        "Other Crops",
        "Rice",
        "Vegetable/Fruits/Nuts",
        "Wheat",
        "Sugar",
        "Plant Fibres",
        "Other Cereals"
        ]
      }
    }
  ],

  "transform": [
    {
      "fold": [
        "Cattle Meat",
        "Oilseed Products",
        "Other Crops",
        "Rice",
        "Vegetable/Fruits/Nuts",
        "Wheat",
        "Sugar",
        "Plant Fibres",
        "Other Meat Products",
        "Other Cereals"
      ],
      "as": ["Product","Val"]
    },
    {"filter": "datum.Product == pProd"},
    {"calculate": "toNumber(datum.Val)", "as": "value"},
    {
      "aggregate": [{"op": "sum", "field": "value", "as": "total"}],
      "groupby": ["Entity","Code"]
    },
    {"calculate": "abs(datum.total)", "as": "absTotal"},
    {"window": [{"op": "rank", "as": "rk"}], "sort": [{"field": "absTotal", "order": "descending"}]},
    {"filter": "datum.rk <= 10"} ],

  "mark": {"type": "bar"},

  "encoding": {
    "y": {
      "field": "Entity",
      "type": "nominal",
      "sort": {"field": "total", "order": "descending"},
      "axis": {"title": null}
    },
    "x": {
      "field": "total",
      "type": "quantitative",
      "axis": {"title": "CO₂ (t)", "format": ",.0f"}
    },
    "tooltip": [
      {"field": "Entity", "title": "Country"},
      {"field": "Code", "title": "Code"},
      {"field": "total", "title": "CO₂ (t)", "format": ",.0f"}
    ]
  }}
